@model Food

<form class="row" enctype="multipart/form-data" method="post">
	<input asp-for="Id" hidden />
	<input asp-for="ImgUrl" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">@(Model.Id==0?"Create":"Edit") Film</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="row">
			<div class="col-10">
				<div class="mb-3 p-3">
					<label asp-for="Name" class="p-0"></label>
					<input asp-for="Name" class="form-control" autocomplete="off" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="mb-3 p-3">
					<label asp-for="Price" class="p-0"></label>
					<input asp-for="Price" class="form-control" autocomplete="off" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="mb-3 p-3">
					<label asp-for="Amount" class="p-0"></label>
					<input asp-for="Amount" step="0.01" class="form-control" autocomplete="off" />
					<span asp-validation-for="Amount" class="text-danger"></span>
				</div>
				<div class="form-check p-3 ms-4">
					<input asp-for="IsFluid" class="form-check-input" />
					<label asp-for="IsFluid" class="form-check-label">Is it fluid?</label>
				</div>
				<div class="mb-3 p-3">
					<label asp-for="@Model.ImgUrl" class="p-0"></label>
					<input type="file" name="img" class="form-control" />
				</div>
				<div class="row ms-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">@(Model.Id == 0 ? "Create" : "Edit")</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Food" asp-action="Index" class="btn btn-outline-secondary form-control">
							Return To List
						</a>
					</div>
				</div>
			</div>
			<div class="col-2">
				<img src="@Model.ImgUrl" width="175"
					 style="border-radius:5px;border:1px" />
			</div>
		</div>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
