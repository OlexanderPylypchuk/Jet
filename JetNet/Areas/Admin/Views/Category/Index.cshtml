@model List<Category>

<div>

	<div class="container">
		<div class="row pt-4 pb-4">
			<div class="col-6">
				<h2 class="text-primary">
					List Of Categories
				</h2>
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-screwdriver"></i>Create New Category
				</a>
			</div>
		</div>


<table class="table table-bordered table-striped">
	<thead>
		<tr>
					<th class="bg-dark text-center">
						CategoryName
					</th>
					<th class="bg-dark text-center">
						DisplayOrder
					</th>
					<th class="bg-dark text-center"></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model.OrderBy(u=>u.DisplayOrder)){
			<tr>
				<td>
					@obj.Name
				</td>
				<td>
					@obj.DisplayOrder
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
							<a asp-controller="Category" asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i>Edit
						</a>
							<a asp-controller="Category" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
							<i class="bi bi-trash3"></i>Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
</div>