@model List<Company>

<div class="container">
	<div class="row pt-4 pb-4">
		<div class="col-6">
			<h2 class="text-primary">
				List Of Companies
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
				<i class="bi bi-screwdriver"></i>Add new company
			</a>
		</div>
	</div>


	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th class="bg-dark text-center">
					Company Name
				</th>
				<th class="bg-dark text-center">
					City
				</th>
				<th class="bg-dark text-center">
					Street
				</th>
				<th class="bg-dark text-center">
					Postal Code
				</th>
				<th class="bg-dark text-center"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>
						@obj.Name
					</td>
					<td>
						@obj.City
					</td>
					<td>
						@obj.StreetAdress
					</td>
					<td>
						@obj.PostalCode
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Company" asp-route-id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i>Edit
							</a>
							<a asp-controller="Company" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
								<i class="bi bi-trash3"></i>Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@section Scripts{
	<script src="~/js/company.js"></script>
}
