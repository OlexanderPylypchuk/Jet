@model Company

<form class="row" method="post">
	<input asp-for="Id" hidden />
	<div class="border-3 mt-4 p-3">
		<h2 class="text-primary">@(Model.Id == 0 ? "Add" : "Edit") Film</h2>
		<hr />
	</div>
	<div class="row">
		<div class="col-10">
			<div class="mb-3 p-3">
				<label asp-for="Name" class="p-0"></label>
				<input asp-for="Name" class="form-control" autocomplete="off" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="mb-3 p-3">
				<label asp-for="City" class="p-0"></label>
				<input asp-for="City" class="form-control" autocomplete="off" />
				<span asp-validation-for="City" class="text-danger"></span>
			</div>
			<div class="mb-3 p-3">
				<label asp-for="StreetAdress" class="p-0"></label>
				<input asp-for="StreetAdress" class="form-control" autocomplete="off" />
			</div>
			<div class="mb-3 p-3">
				<label asp-for="PostalCode" class="p-0"></label>
				<input asp-for="PostalCode" class="form-control" autocomplete="off" />
				<span asp-validation-for="PostalCode" class="text-danger"></span>
			</div>
			<div class="row">
				<div class="col-6 col-md-3">
					<button type="submit" class="btn btn-primary form-control">@(Model.Id == 0 ? "Add" : "Edit")</button>
				</div>
				<div class="col-6 col-md-3">
					<a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary form-control">
						Return To List
					</a>
				</div>
			</div>
		</div>
	</div>
</form>
