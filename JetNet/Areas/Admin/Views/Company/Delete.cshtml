@model Company

<form method="post">
	<div class="border p-3 my-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Company info</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3 row p-1">
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" disabled class="form-control" autocomplete="off" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="City" class="p-0"></label>
			<input asp-for="City" disabled class="form-control" autocomplete="off" />
			<span asp-validation-for="City" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="StreetAdress" class="p-0"></label>
			<input asp-for="StreetAdress" disabled class="form-control" autocomplete="off" />
			<span asp-validation-for="StreetAdress" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="PostalCode" class="p-0"></label>
			<input asp-for="PostalCode" disabled class="form-control" autocomplete="off" />
			<span asp-validation-for="PostalCode" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Copmany" asp-action="Index" class="btn btn-outline-secondary form-control">
					Return To List
				</a>
			</div>
		</div>
	</div>
</form>