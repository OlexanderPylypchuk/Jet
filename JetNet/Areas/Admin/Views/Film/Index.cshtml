@model List<Film>

<div>

	<div class="container">
		<div class="row pt-4 pb-4">
			<div class="col-6">
				<h2 class="text-primary">
					List Of Categories
				</h2>
			</div>
			<div class="col-6 text-end p-0 m-0">
				<a asp-controller="Film" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-screwdriver"></i>Create New Film
				</a>
			</div>
		</div>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th class="bg-dark text-center">
						Title
					</th>
					<th class="bg-dark text-center">
						Producer
					</th>
					<th class="bg-dark text-center">
						Description
					</th>
					<th class="bg-dark text-center">
						Price (in gryvnias)
					</th>
					<th class="bg-dark text-center"></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model.OrderBy(u => u.Id))
				{
					<tr>
						<td>
							@obj.Title
						</td>
						<td>
							@obj.Producer
						</td>
						<td>
							@obj.Description
						</td>
						<td>
							@obj.Price
						</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Film" asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
									<i class="bi bi-pencil-square"></i>Edit
								</a>
								<a asp-controller="Film" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
									<i class="bi bi-trash3"></i>Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
